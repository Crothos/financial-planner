<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link rel="stylesheet" href="../css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"></script>
</head>

<body>

    <header class="text-center" style="margin: 4rem;">

        <section class="card-body">
            <img src="../assets/logoBB.png" style="width: 400px;" />
            <!-- <h1 class="card-title">BudgitBuddy</h1> -->
            <h4 class="card-text">A financial planner that's built with you in mind.</h4>
        </section>

    </header>

    <form style="margin-top: 8rem;">

        <div class="container" style="width: 50rem;">
            <div class="" style="margin-top: 20px;">
                <div class="col d-flex justify-content-end "><button class="tablink nav-tabs" type="button"
                        onclick="openPage('logIn')" id="defaultOpen">LOG IN</button>

                    <button class="tablink nav-tabs" type="button" onclick="openPage('signUp')">SIGN UP</button>
                </div>
            </div>

            <div class="tab-content" id="tab-content1">
                <div id="logIn" class="tabcontent text-center mt-5">

                    <h3 style="margin: 2rem">LOG IN</h3>
                    <input class="email-login text-center" placeholder="Email" id="login-email" style="margin: 1rem">
                    <input class="password-login text-center" placeholder="Password" id="login-password"
                        style="margin: 1rem">
                    <nav style="margin: 2rem">
                        <!-- Conditionally render login or logout links -->
                        {{#if logged_in}}
                        <a href="/overview">profile</a> |
                        <button id="button-fancy" id="logout">LOGOUT</button>
                        {{else}}
                        <a id="button-fancy" href="/overview">LOG IN</a>
                        {{/if}}
                    </nav>

                </div>
                <div id="signUp" class="tabcontent text-center mt-5">
                    <h3 style="margin: 2rem">SIGN UP</h3>
                    <input class="text-center" placeholder="Email" style="margin: 1rem">
                    <input class="text-center" placeholder="Password" style="margin: 1rem">
                    <nav style="margin: 2rem">
                        <!-- Conditionally render login or logout links -->
                        <a id="button-fancy" href="/login">SIGN UP</a>
                    </nav>
                </div>

            </div>
        </div>

    </form>


    <script>
        function openPage(pageName, elmnt) {
            var i, tabcontent, tablinks;
            tabcontent = document.getElementsByClassName("tabcontent");
            for (i = 0; i < tabcontent.length; i++) {
                tabcontent[i].style.display = "none";
            }
            tablinks = document.getElementsByClassName("tablink");
            for (i = 0; i < tablinks.length; i++) {

            }
            document.getElementById(pageName).style.display = "block";

        }

        // Get the element with id="defaultOpen" and click on it
        document.getElementById("defaultOpen").click();
    </script>


</body>


</html>

