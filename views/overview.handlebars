          <option selected>Select your goal</option>
          <option value=""></option>
          <option value=""></option>
          <option value=""></option>
          <option value=""></option>
        </select>

        <div class="input-group mb-3">
          <span class="input-group-text">$</span>
          <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)"
            placeholder="New Amount" />
        </div>

        <div>
          <button class="btn mt-4" id="updateBtn" style="
                        background-color: #06D6A0; color: white;">Update Goal</button>
          <button class="btn btn-danger mt-4" id="deleteBtn">Delete Goal</button>
        </div>

      </div>
    </div>

    <div class="col-6">
      <div class="container rounded-4 align-middle" id="boxes2">

        <h5 class="">Example of goal</h5>
        <br />
        <p>Example of amount left</p>
        <div>
          <img id="icon2" src="./assets/accounts.png" />
        </div>

      </div>
    </div>
  </div>
</div>

