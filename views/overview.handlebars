      <option value="Utilities">Utilities</option>
      <option value="Entertainment">Entertainment</option>
      <option value="Other">Other</option>
    </select>

    <div>
      <button class="btn btn-danger mt-4 me-4">Add Income</button>
      <button class="btn btn-danger mt-4 ms-4">Add Expense</button>
    </div>

  </div>

</div>

<div id="goals" class="tabcontent text-center pt-5"
  style="background-image: url('assets/background.png');height: 1000px; background-color: #E3F3FF">
  <h3><strong>GOALS</strong></h3>
  <h4>Set some goals!</h4>

  <div class="row">
    <div class="container rounded-4" id="boxes">

      <input type="text" class="form-control mb-3" aria-label="Add goal" placeholder="Add your goal" />

